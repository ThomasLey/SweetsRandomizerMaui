<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppClient.Pages.OverviewPage"
             Title="Übersicht">

    <Grid 
        Margin="10"
        RowSpacing="10">
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <ScrollView 
            Grid.Row="0"
            Grid.Column="0">
            <StackLayout
                x:Name="ModuleListLayout"
                Spacing="10">
                
                <!-- Added by the program -->

            </StackLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Text="Gerät hinzufügen"
            Clicked="ButtonAddModule_Clicked"/>
    </Grid>
        
</ContentPage>
