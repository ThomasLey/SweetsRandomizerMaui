<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppClient"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate local:Pages.OverviewPage}"
        Content="OverviewPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:Pages.AddModulePage}"
        Content="AddModulePage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:Pages.ModuleControlPage}"
        Content="ModuleControlPage" />

</Shell>
